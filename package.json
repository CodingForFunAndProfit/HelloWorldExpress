{
    "name": "helloworldexpress",
    "version": "1.0.0",
    "description": "",
    "main": "dist/index.js",
    "scripts": {
        "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
        "build": "tsc",
        "heroku-postbuild": "npm run build && npm run db:migrate:prod",
        "db:migrate:prod": "sequelize db:migrate --env production",
        "db:migrate:test": "sequelize db:migrate --env test",
        "start": "npm run serve",
        "serve": "node ./dist/server",
        "watch-node": "set DEBUG=helloworldexpress & node ./dist/server",
        "watch-ts": "tsc -w",
        "test": "jest --detectOpenHandles src"
    },
    "engines": {
        "node": "11.13.0",
        "npm": "6.9.0"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CodingForFunAndProfit/HelloWorldExpress.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/CodingForFunAndProfit/HelloWorldExpress/issues"
    },
    "homepage": "https://github.com/CodingForFunAndProfit/HelloWorldExpress#readme",
    "dependencies": {
        "apollo-server-express": "2.4.8",
        "express": "4.16.4",
        "graphql": "14.2.1",
        "pg": "7.9.0",
        "reflect-metadata": "0.1.13",
        "sequelize": "5.2.13",
        "type-graphql": "0.17.1"
    },
    "devDependencies": {
        "@types/bluebird": "3.5.26",
        "@types/debug": "4.1.3",
        "@types/express": "4.16.1",
        "@types/graphql": "14.2.0",
        "@types/jest": "24.0.11",
        "@types/node": "11.13.0",
        "@types/supertest": "2.0.7",
        "@types/validator": "10.11.0",
        "jest": "24.7.1",
        "sequelize-cli": "5.4.0",
        "supertest": "4.0.2",
        "ts-jest": "24.0.2",
        "tslint": "5.15.0",
        "typescript": "3.4.2"
    }
}
