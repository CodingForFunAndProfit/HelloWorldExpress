{
    "name": "helloworldexpress",
    "version": "1.0.0",
    "description": "",
    "main": "dist/index.js",
    "scripts": {
        "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
        "build": "tsc",
        "heroku-postbuild": "npm run build && npm run heroku:migrate",
        "heroku:migrate": "sequelize db:migrate --env production",
        "start": "npm run serve",
        "serve": "node ./dist/server",
        "watch-node": "set DEBUG=helloworldexpress & node ./dist/server",
        "watch-ts": "tsc -w",
        "test": "jest --detectOpenHandles src"
    },
    "engines": {
        "node": "11.13.0",
        "npm": "6.9.0"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CodingForFunAndProfit/HelloWorldExpress.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/CodingForFunAndProfit/HelloWorldExpress/issues"
    },
    "homepage": "https://github.com/CodingForFunAndProfit/HelloWorldExpress#readme",
    "dependencies": {
        "express": "^4.16.4",
        "pg": "7.9.0",
        "sequelize": "5.2.12"
    },
    "devDependencies": {
        "@types/debug": "^4.1.3",
        "@types/express": "^4.16.1",
        "@types/jest": "^24.0.11",
        "@types/node": "11.13.0",
        "@types/supertest": "^2.0.7",
        "jest": "24.7.1",
        "nodemon": "^1.18.10",
        "sequelize-cli": "5.4.0",
        "supertest": "^4.0.2",
        "ts-jest": "24.0.2",
        "tslint": "5.15.0",
        "typescript": "3.4.2"
    }
}
