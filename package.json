{
    "name": "helloworldexpress",
    "version": "1.0.0",
    "description": "",
    "main": "dist/index.js",
    "scripts": {
        "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
        "build-ts": "tsc",
        "postinstall": "npm run build-ts",
        "prestart": "npm run build",
        "start": "npm run serve",
        "serve": "node ./dist/server",
        "watch-node": "set DEBUG=helloworldexpress & node ./dist/server",
        "watch-ts": "tsc -w",
        "test": "jest --detectOpenHandles src"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CodingForFunAndProfit/HelloWorldExpress.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/CodingForFunAndProfit/HelloWorldExpress/issues"
    },
    "homepage": "https://github.com/CodingForFunAndProfit/HelloWorldExpress#readme",
    "dependencies": {
        "express": "^4.16.4"
    },
    "devDependencies": {
        "@types/debug": "^4.1.3",
        "@types/express": "^4.16.1",
        "@types/jest": "^24.0.11",
        "@types/node": "^11.12.2",
        "@types/supertest": "^2.0.7",
        "jest": "^24.5.0",
        "nodemon": "^1.18.10",
        "supertest": "^4.0.2",
        "ts-jest": "^24.0.1",
        "tslint": "^5.14.0",
        "typescript": "^3.4.1"
    }
}
